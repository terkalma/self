<% if @success %>
  $('#new-event-form-container').modal('close');
  $(document).trigger('react.event_added');
  $('#new-event-form-container .modal-content')
        .html('<%= escape_javascript render(partial: 'welcome/event_form', locals: { event: current_user.events.new(hours: 8) }) %>');
<% else %>
  $('#new-event-form-container .modal-content')
        .html('<%= escape_javascript render(partial: 'welcome/event_form', locals: { event: @event }) %>');
<% end %>
$('#new-event-form-container select').material_select('destroy');
$('#new-event-form-container select').material_select();
window.ReactRailsUJS.unmountComponents("#date-input-container");
window.ReactRailsUJS.mountComponents("#date-input-container");
