<div class="row margin-top-20">
    <div class="col-md-offset-3 col-md-6 col-xs-12">
        <table id="projectsTable"
               class="table table-striped table-bordered table-responsive"
               data-source="<%= admin_projects_path format: 'json' %>">

            <thead>
            <tr>
                <th>Name</th>
                <th>Created At</th>
            </tr>
            </thead>

            <tbody>
            </tbody>
