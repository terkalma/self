<% if @success %>
  $('#vacation-form-container').modal('close');
  $(document).trigger('react.vacation_added');
<% else %>
  $('#vacation-form-container .modal-content')
      .html('<%= escape_javascript render(partial: 'welcome/vacation_form', locals: { vacation: @vacation_request }) %>');
  $('.datepicker').pickadate({
    selectMonths: true,
    selectYears: 2,
    onStart: function () {
      $('.picker').appendTo('body');
    }
  });
<% end %>
