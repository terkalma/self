<%= bootstrap_form_for vacation, url: { controller: :vacation_requests, action: :create }, remote: true do |f| %>
  <%= f.hidden_field :user_id %>
  <%= f.text_field :vacation_from, class: 'datepicker' %>
  <div class="row">
        <div class="input-field col s12">
 			<%= f.text_field :vacation_to, class: 'materialize-textarea' %>
  <%= f.text_area :reason, rows: 3 %>
  <%= f.form_group :paid do %>
    <%= f.check_box :paid, label: 'Paid' %>
  <% end %>
  <%= f.submit 'Submit', data: { disable_with: 'Submitting...' } %>
<% end %>

